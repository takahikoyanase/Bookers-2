<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>error prohibited this obj from being saved
          <% @user.errors.full_messages.each do |message| %>
           <%= message %>
          <% end %>
        <% end %>

      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <div><%= f.text_field :name, autofocus: true, id:"user_name", placeholder: "名前" %></div>
        </div>
        <div class="form-group">
          <label for="user_image">image</label>
          <div><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></div>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <div><%= f.text_field :introduction, autofocus: true, id:"user_introduction" %></div>
        </div>
        <%= f.submit 'Update User', class: "btn btn-secondary btn-sm btn-block update user" %>
      <% end %>
    </div>
  </div>
</div>